<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <%= image_tag @user.get_image %>
            <table class="table">
                <tr>
                    <td>name</td>
                    <td><%= @user.name %></td>
                </tr>
                <tr>
                    <td>introduction</td>
                    <td><%= @user.introduction %></td>
                </tr>
            </table>
            <div class="row">
                <%= link_to edit_user_path, class: 'btn btn-outline-secondary btn-block' do %>
                    <i class="fa-solid fa-user-gear"></i>
                <% end %>
            </div>
        </div>

        <div class="offset-md-1 col-md-8">

        </div>
    </div>
</div>